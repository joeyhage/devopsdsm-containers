    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Client: Serve",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/client"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Server: Debug",
            "module": "main",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Slides: Serve",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "marp:serve"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/slides"
        }
    ]
}